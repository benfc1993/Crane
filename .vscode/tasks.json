{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Premake",
			"command": "cd ${workspaceFolder}/scripts && ./setup.sh",
			"args": [
			],
			"group": "none",
			"detail": "Premake: Create build files"
		},
		{
			"type": "cppbuild",
			"label": "build debug",
			"command": "/usr/bin/make",
			"args": [
			],
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: make in debug config"
		},
		{
			"type": "cppbuild",
			"label": "build release",
			"command": "/usr/bin/make",
			"args": [
				"config=release"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: make in release config"
		},
		{
			"type": "cppbuild",
			"label": "build dist",
			"command": "/usr/bin/make",
			"args": [
				"config=dist"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: make in distribution config"
		}
	]
}